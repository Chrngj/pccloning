@page "/admin/serviceaccount"
@model PCGroupCloningApp.Pages.Admin.ServiceAccountModel
@{
    ViewData["Title"] = "Service Account Management";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-user-cog"></i> Service Account Management
                    </h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert @(Model.StatusMessage.Contains("✅") || Model.StatusMessage.Contains("successful") ? "alert-success" : "alert-danger")" role="alert">
                            @Model.StatusMessage
                        </div>
                    }

                    @if (Model.HasExistingAccount)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i>
                            A service account is currently configured. You can update the credentials below.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            No service account configured. The application is currently using Windows Authentication.
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Domain" class="form-label"></label>
                            <input asp-for="Input.Domain" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Username" class="form-label"></label>
                            <input asp-for="Input.Username" class="form-control" placeholder="e.g., svc-pccloning" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                            <div class="form-text">Enter username without domain (e.g., svc-pccloning)</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" asp-page-handler="Test" class="btn btn-outline-primary">
                                <i class="fas fa-plug"></i> Test Connection
                            </button>
                            <button type="submit" asp-page-handler="Save" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Credentials
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="card bg-light">
                        <div class="card-body">
                            <h6 class="card-title">Service Account Requirements:</h6>
                            <ul class="mb-0 small">
                                <li>Domain user account (e.g., IBK\svc-pccloning)</li>
                                <li>Read permissions on Computer and Group objects</li>
                                <li>Write permissions to modify group memberships</li>
                                <li>Permissions to move computers between OUs</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}